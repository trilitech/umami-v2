{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build"
      ]
    },
    "lint:ci": {
      "dependsOn": [
        "^build"
      ]
    },
    "format:ci": {
      "dependsOn": [
        "lint:ci"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "CI"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "test:watch": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "format": {
      "dependsOn": [
        "lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^build"
      ]
    },
    "check-types:watch": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "audit": {},
    "check-circular-deps": {
      "dependsOn": [
        "^build"
      ]
    },
    "test:e2e": {
      "dependsOn": [
        "build"
      ],
      "env": [
        "TZKT_SYNC_IMAGE",
        "TZKT_API_IMAGE"
      ]
    }
  }
}
