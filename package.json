{
  "name": "umami",
  "author": "Trilitech <umami-admin@trili.tech>",
  "description": "Tezos Wallet",
  "homepage": "https://umamiwallet.com",
  "repository": "https://github.com/trilitech/umami-v2",
  "license": "MIT",
  "engines": {
    "node": ">=20 <21.0.0"
  },
  "packageManager": "yarn@4.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "rimraf .turbo && turbo clean",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "turbo format",
    "ci": "turbo check-types lint:ci format:ci audit check-circular-deps test --concurrency 3",
    "test:e2e": "turbo test:e2e",
    "dev:desktop": "turbo dev --filter='./apps/desktop'",
    "dev:web": "turbo dev --filter='./apps/web'",
    "storybook": "turbo dev --filter='./apps/storybook'"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
    "tsup": "^8.1.0",
    "turbo": "^2.0.6"
  },
  "resolutions": {
    "@typescript-eslint/utils": "^7.15.0"
  }
}
